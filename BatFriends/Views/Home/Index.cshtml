@model IEnumerable<BatFriends.DTO.SpeciesDTO>
@{
    ViewBag.Title = "Home Page";
}


<div class="row card-deck">
    @foreach (var species in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-4 d-flex align-items-stretch">
            <div class="card">
                <div class="card-img-box">
                    <img class="card-img-top" src="@species.PicURL" alt="@species.CommonName" height="250">
                </div>
                <div class="card-body">
                    <h5 class="card-title">@species.CommonName</h5>
                    <p class="card-text">@species.FunFact.Substring(0, Math.Min(species.FunFact.Length, 100))</p>
                </div>
            </div>
        </div>     
    }
</div>

@if(Model.Count() == 0)
{
    <h1>Unfortunately, no bats match that search criteria.</h1>
}

